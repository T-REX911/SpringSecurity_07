							"console.log(responseData);\r",
							"\r",
							"// Use a try-catch block for safer parsing in case the response is not valid JSON\r",
							"try {\r",
							"    const val = JSON.parse(responseData);\r",
							"    console.log(val.token);\r",
							"    \r",
							"    // Use pm.collectionVariables.set() to set the collection variable\r",
							"    pm.collectionVariables.set(\"Token\", val.token);\r",
							"    \r",
							"} catch (e) {\r",
							"    console.error(\"Failed to parse JSON response:\", e);\r",
							"}"
